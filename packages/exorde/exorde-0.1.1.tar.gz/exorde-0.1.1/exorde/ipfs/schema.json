{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Content": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "entities": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "item": {
            "type": "object",
            "properties": {
              "Author": {
                "type": "string"
              },
              "Content": {
                "type": "string"
              },
              "Controversial": {
                "type": "boolean"
              },
              "CreationDateTime": {
                "type": "string",
                "pattern": "^([\\+-]?\\d{4}(?!\\d{2}\\b))((-?)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))?|W([0-4]\\d|5[0-2])(-?[1-7])?|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6])))([T\\s]((([01]\\d|2[0-3])((:?)[0-5]\\d)?|24\\:?00)([\\.,]\\d+(?!:))?)?(\\17[0-5]\\d([\\.,]\\d+)?)?([zZ]|([\\+-])([01]\\d|2[0-3]):?([0-5]\\d)?)?)?)?$"
              },
              "Description": {
                "type": "string"
              },
              "DomainName": {
                "type": "string"
              },
              "Language": {
                "type": "string"
              },
              "Reference": {
                "type": "string"
              },
              "Title": {
                "type": "string"
              },
              "Url": {
                "type": "string",
                "format": "uri"
              },
              "internal_id": {
                "type": "string"
              },
              "internal_parent_id": { 
                  "anyOf": [
                    { "type": "number" }, 
                    { "type": "null" }
                  ]
              },
              "mediaType": {
                "type": "string"
              },
              "nbComments": {
                "type": "number"
              },
              "nbLiked": {
                "type": "number"
              },
              "nbShared": {
                "type": "number"
              }
            }
          },
          "keyword": {
            "type": "string"
          },
          "links": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "medias": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "spotterCountry": {
            "type": "string"
          },
          "tokenOfInterest": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
